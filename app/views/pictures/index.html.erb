<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.title %></td>
      <td><%= picture.latitude %></td>
      <td><%= picture.longitude %></td>
      <td>
        <% if picture.picture.attached? %>
          <%= image_tag picture.picture.variant(resize: "50x50") %>
        <% end %>
      </td>
        <td><%= link_to 'Show', picture, class: "btn btn-sm btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture), class: "btn btn-sm btn-outline-success" %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path, class: "btn btn-success" %>
